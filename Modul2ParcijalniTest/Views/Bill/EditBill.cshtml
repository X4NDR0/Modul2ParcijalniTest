@using Modul2ParcijalniTest.SqlFacade;
@model Modul2ParcijalniTest.SqlFacade.Bill;
@{
    Layout = null;
}

<html>

<head>
    <style type="text/css">
        .searchContainer {
            display: inline-block;
        }
    </style>
</head>


<body>


    @using (Html.BeginForm("EditBill", "Bill", FormMethod.Post))
    {

        <h3>Izmeni racun:@Model.AccountNumber</h3>

        <p class="searchContainer">Nosilac racuna:</p>
        @Html.TextBoxFor(x => x.AccountHolder)
        @Html.ValidationMessageFor(x => x.AccountHolder)

        <br />

        <p class="searchContainer">Broj racuna:</p>
        @Html.TextBoxFor(x => x.AccountNumber)
        @Html.ValidationMessageFor(x => x.AccountNumber)

        <br />

        <p class="searchContainer">Online:</p>
        @Html.CheckBoxFor(x => x.OnlineBanking)
        @Html.ValidationMessageFor(x => x.OnlineBanking)

        <br />

        <p class="searchContainer">Aktivan:</p>
        @Html.CheckBoxFor(x => x.ActiveAccount)
        @Html.ValidationMessageFor(x => x.ActiveAccount)

        <br />

        <button type="submit">Izmeni racun</button>

    }


</body>


</html>